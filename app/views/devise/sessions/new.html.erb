<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
      <div class="row">
        <div class="input-field col s12 center">
          <h4>Weekz</h4>
          <p class="center login-form-text">Identificação</p>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="material-icons prefix">perm_identity</i>
          <%= f.email_field :email, id: 'username', autofocus: true %>
          <label for="username">Email</label>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="material-icons prefix">lock_outline</i>
          <%= f.password_field :password, id: 'password' %>
          <label for="password">Senha</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l12  login-text">
            <%= f.check_box :remember_me, id: 'remember-me' %>
            <label for="remember_me">Lembrar</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Login", class: "btn waves-effect waves-light col s12" %>
        </div>
        <div class="input-field col s12">
          <%= link_to "Entrar usando Facebook", user_facebook_omniauth_authorize_path, class: "btn waves-effect waves-light col s12 fb" %>
        </div>
        <div class="input-field col s12 center">
          <%= link_to "Ainda não é cadastrado?", new_user_registration_path %>
        </div>
      </div>

    <% end %>
  </div>
</div>
