<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
      <div class="row">
        <div class="input-field col s12 center">
          <h4>MEU GUIA</h4>
          <p class="center login-form-text">Acesso para clientes</p>
          <%= devise_error_messages! %>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-social-person-outline prefix"></i>
          <%= f.email_field :email, id: 'username' %>
          <label for="email" class="center-align">Email</label>
        </div>
      </div>
      <div class="row margin">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <%= f.password_field :password, id: 'password' %>
          <label for="password">Senha</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m12 l12  login-text">
            <%= f.check_box :remember_me, id: 'remember-me' %>
            <label for="remember_me">Lembrar</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Login", class: "btn waves-effect waves-light col s12" %>
        </div>
        <div class="input-field col s12">
          <p class="margin medium-small center"><%= link_to "Ainda não é cadastrado?", new_user_registration_path %></p>
        </div>
      </div>

    <% end %>
  </div>
</div>
