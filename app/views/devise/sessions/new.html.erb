<div class="login-screen col s12 m6 offset-m3">
  <div class="section no-top-padding">
    <h5 class="main-title">Login</h5>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

     <div class="input-field">
       <%= f.email_field :email, autofocus: true, class: "round full-width-input" %>
       <%= f.label :email %>
     </div>

     <div class="input-field">
       <%= f.password_field :password, autocomplete: "off", class: "round full-width-input" %>
       <%= f.label :password %>
     </div>

     <% if devise_mapping.rememberable? -%>
       <div class="section">
         <%= f.check_box :remember_me %>
         <%= f.label :remember_me %>
       </div>
     <% end %>

     <div class="section">
       <%= render "devise/shared/links" %>

       <%= f.button type: "submit", name: "action", class: "btn-large right" do %>
         <i class="material-icons right">send</i>Enviar
       <% end %>
     </div>
  <% end %>
</div>
