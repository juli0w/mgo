<div class="card">
  <div class="card-content">
    <div class="card-title center valign-wrapper" style="height: 110px;">
      <%=
        link_to(
          image_tag(logotipo_square(company), class: "valign", style: "max-width: 110px; max-height: 110px; margin: 0 auto;"), get_url(company))
      %>
    </div>
    <p style="overflow: hidden; max-height: 110px; margin: 15px 0 5px 0;">
      <%= link_to company.name, get_url(company), class: "truncate grey-text text-darken-4" %>
    </p>
    <%= link_to rate_for(company), "/#{company.slug}/review", class: "rating" %>
    <br />
    <br />
    <div class='truncate'>
      <%= link_to company.category.name, company.category, class: "state blue-grey lighten-2 white-text" %>
    </div>
  </div>
</div>
