<div class="row">
  <h5 class="main-title">Empresas</h5>
</div>

<div class="search-offers">
  <%= form_tag companies_path, method: :get do %>
      <fieldset style="border: none; margin: 0; padding: 0;">
        <input name="keyword" id="icon_local" style="display: inline;" type="search" placeholder="Filtrar empresas" value=<%= params[:keyword] %>>
        <button class="btn" type="submit" name="action">
          Filtrar
        </button>
    </fieldset>
  <% end %>
</div>

<div class="row">
  <table class="striped bordered">
    <thead>
      <tr>
          <th data-field="id"></th>
          <th data-field="name">Nome</th>
          <th data-field="price">Descrição</th>
          <th data-field="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>

      <tr>
        <td>#<%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td>
          <%= link_to "Editar", [:edit, company] %>
        | <%= link_to "Perfil", edit_company_profile_path(company) %>
        | <%= link_to "Álbums", company_albums_path(company) %>
        | <%= link_to "Avaliações", company_reviews_path(company) %>
        | <%= link_to "Ver", get_url(company) %>
        </td>
      </tr>

      <% end %>
    </tbody>
  </table>

  <%= paginate @companies %>

  <div class="section">
    <%= link_to "Nova empresa", new_company_path, class: "btn large" %>
  </div>
</div>
