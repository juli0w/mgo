<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc><%= @company.link(root_url) %></loc>
    <changefreq>weekly</changefreq>
  </url>
  <% @company.profile.pages.each do |page| %>
    <url>
      <loc><%= "#{@company.link(root_url)}/#{page.slug}" %></loc>
      <changefreq>weekly</changefreq>
    </url>
  <% end %>

  <% @blog = @company.profile.pages.select {|a| a.pageable_type == "BlogPage" } %>
  <% if @blog.any? %>
    <% @company.articles.each do |article| %>
      <url>
        <loc><%= article.link(root_url) %></loc>
        <changefreq>weekly</changefreq>
      </url>
    <% end %>
  <% end %>
</urlset>
