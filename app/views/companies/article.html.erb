<div id="<%= @article.slug %>" class="full-padding">
  <div class="row">
    <div class="container">
      <!-- <div class="section">
        <div class="title-wrapper center no-border">
          <h2><%#= @page.title %></h2>
          <h3><%#= @page.description %></h3>
        </div>
      </div> -->

      <div class="articles">
        <div class="col s12 l8">
          <div class="article card">
            <div class="card-title">
              <h1><strong><%= @article.title %></strong></h1>
              <div class="fb-like" data-href="<%= "#{root_url}/#{@company.slug}/#{@page.slug}/#{@article.slug}" %>" data-layout="standard" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
              <em class="card-description right"><i class="material-icons">schedule</i> Postado em <%= @article.created_at.strftime("%d/%m/%Y") %></em>
            </div>

            <% if @article.cover? %>
              <div class="card-image">
                <%= image_tag @article.cover, alt: @article.title %>
              </div>
            <% end %>

            <div class="card-content">
              <% if @article.description.present? %>
                <p class="article-description ubuntu"><%= @article.description %></p>
              <% end %>
              <div style="margin-bottom: 20px;" class="ubuntu"><%= raw @article.content %></div>
              <div class="fb-like" data-href="<%= "#{root_url}/#{@company.slug}/#{@page.slug}/#{@article.slug}" %>" data-layout="standard" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
            </div>
          </div>
        </div>

        <%= render "layouts/widgets/side_relacionados" %>

        <%= render "layouts/widgets/facebook_widget" %>
      </div>

      <div class="comments">
        <div class="col s12">
          <h5>Deixe seu coment√°rio</h5>
          <div class="fb-comments" data-href='<%= "#{root_url}/#{@company.slug}/#{@page.slug}/#{@article.slug}" %>' data-width="100%" data-numposts="5"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= content_for :og do %>
  <meta property="og:title" content='<%= "#{@article.title} | #{@company.name}" %>' />
  <meta property="og:description" content="<%= @article.description %>">
  <meta property="og:type" content="website" />
  <meta property="og:image" content="<%= @article.cover.url %>" />
<% end %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.8&appId=1375113029226011";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
