<div class="search-section row white no-bot-margin">
  <div class="container">
    <div class="col s12">
      <h5 class="center white-text discover">Descubra para onde ir</h5>
      <nav class="search-nav nav-opacity">
        <div class="nav-wrapper">
          <%= form_tag search_path, method: :get, id: "search_form" do %>
            <div class="input-field">
              <input name="key" id="icon_local" type="search" placeholder="Bares, cafÃ©s, coisas para fazer">
              <label class="label-icon" for="search"><i class="material-icons">search</i></label>
              <i class="material-icons">close</i>
            </div>
          <% end %>
          <div class="main-categories center">
            <span>
              <%= link_to Category.find_by_name("Pizzarias") do %>
                <i class="fa fa-cutlery" aria-hidden="true"></i> Pizzarias
              <% end %>
              <%= link_to Category.find_by_name("Shoppings"), class: "hide-on-small-only" do %>
                <i class="fa fa-shopping-bag" aria-hidden="true"></i> Shoppings
              <% end %>
              <%= link_to Category.find_by_name("Parques") do %>
                <i class="fa fa-tree" aria-hidden="true"></i> Parques
              <% end %>
              <%= link_to "#", 'data-activates' => "slide-out", class: "open-menu", style: "display: inline-block;" do %>
                <i class="fa fa-plus" aria-hidden="true"></i> Tudo
              <% end %>
            </span>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>
