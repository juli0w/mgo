<div class="section no-top-padding">
  <h5 class="main-title"><%= album.name %></h5>
  <p><%= album.description %></p>
</div>

<div class="row photos">
  <% album.photos.each do |photo| %>
    <div class="col">
      <div class="photo center-align" style="overflow: hidden;" img-full="<%= photo.url %>">
        <div class="valign-wrapper center-align">
          <%= image_tag(photo.slider.url, class: 'valign img-open') %>
        </div>
      </div>
    </div>
  <% end %>
</div>
