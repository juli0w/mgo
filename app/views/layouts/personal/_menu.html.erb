<nav role="navigation" class="nav-menu <%= color(:primary_color, @company) %>">
  <div class="nav-wrapper container tabs-menu">
    <ul class="tabs">
      <% if @company.profile.institutional.present? and @company.premium? %>
        <li class="tab"><%= link_to "Inicial", "#tab-inicial", class: "#{color(:link_color, @company)}" %></li>
      <% end %>
      <% if @company.premium? %>
        <% @albums.each do |album| %>
          <li class="tab"><%= link_to album.name, "#tab-album-#{album.id}", class: "#{color(:link_color, @company)}" %></li>
        <% end %>
      <% end %>
      <li class="tab"><%= link_to "Contato", "#tab-contato", class: "#{color(:link_color, @company)}" %></li>
    </ul>
  </div>
</nav>
