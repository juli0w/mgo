<div class="col l4 hide-on-med-and-down sidebar">
  <ul class="collection with-header">
    <li class="collection-header"><h5 class="<%= color(:text_color, @company) %> <%= color(:primary_color, @company) %>">Relacionados</h5></li>
    <% @company.articles.last(5).each do |article| %>
      <li class="collection-item avatar">
        <%= link_to "" do %>
          <%= image_tag(article.cover, class: 'square') %>
          <span class="title">
            <%= link_to article.title, '', class: "grey-text text-darken-4" %>
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
