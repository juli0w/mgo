<article class="article card grey-text text-darken-4">
  <% if article.cover? %>
    <picture class="col s12 m5">
      <%= link_to image_tag(article.cover.article, alt: article.title), article.link(root_url) %>
    </picture>
  <% end %>
  <div class="col s12 m7 article-content">
    <h2><%= link_to article.title, article.link(root_url), class: "grey-text text-darken-4" %></h2>
    <div class="card-content">
      <h3 class="article-description ubuntu"><%= link_to article.description, article.link(root_url), class: "grey-text text-darken-4" %></h3>
      <%#= link_to "Ler mais", article.link(root_url), class: "btn #{color(:link_color, @company)} #{color(:primary_color, @company)} btn-read-more" %>
      <div class="fb-like" data-href="<%= article.link(root_url) %>" data-layout="button" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
    </div>
  </div>
</article>
