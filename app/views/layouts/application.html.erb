<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%= display_meta_tags site: 'Meu Guia' %>
    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
  </head>

  <body>
    <%= render "layouts/main/navbar" %>

    <%= render "layouts/main/search" %>

    <%= render "layouts/main/categories" %>

    <%= render "layouts/main/flash" %>

    <%= render "layouts/main/content" %>

    <% if @map %>
      <script>
        $(document).ready(function() {
          $.getScript('https://maps.googleapis.com/maps/api/js?key=AIzaSyCzq1h0fNZETR8Q0VAgVxqui85bPEhb-N0&callback=initMap');
        });
      </script>
      <%= render "layouts/main/map" %>
    <% end %>

    <%= render "layouts/main/footer" %>
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-23676248-2', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
