<div id="profile-page-header" class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag @company.cover, alt: "company cover", class:"activator" %>
    </div>
    <div class="card-content <%= primary_color(@company) %>" style="padding-bottom: 0; padding-right: 0;">
      <div class="row">
        <div class="col s2">
          <span class="valign card-profile-image valign-wrapper">
            <%= image_tag logotipo_square(@company), alt: "company logotipo", class: "valign z-depth-2 activator responsive-img white" %>
          </span>
        </div>
        <div class="col s3">
          <h4 class="card-title <%= logo_color(@company) %>">
            <strong>
              <%= @company.name %>
            </strong>
          </h4>
          <p class="medium-small <%= text_color(@company) %>"><%= @company.category.name %></p>
        </div>

        <div class="col s7 profile-menu">
          <ul>
          <li class="center-align right">
            <%= link_to backstage_company_albums_path(@company), class: link_color(@company) do %>
              <span class="card-title <%= detail_color(@company) %>"><i class="material-icons">perm_media</i></span>
              <p class="medium-small <%= link_color(@company) %>">Álbuns</p>
            <% end %>
          </li>

          <li class="center-align right">
            <%= link_to edit_backstage_company_path(@company), class: link_color(@company) do %>
              <span class="card-title <%= detail_color(@company) %>"><i class="material-icons">edit</i></span>
              <p class="medium-small <%= link_color(@company) %>">Editar dados</p>
            <% end %>
          </li>

          <li class="center-align right">
            <%= link_to backstage_company_profile_path(@company), class: link_color(@company) do %>
              <span class="card-title <%= detail_color(@company) %>"><i class="material-icons">assignment</i></span>
              <p class="medium-small <%= link_color(@company) %>">Editar perfil</p>
            <% end %>
          </li>

          <li class="center-align right">
            <%= link_to backstage_company_path(@company), class: link_color(@company) do %>
              <span class="card-title <%= detail_color(@company) %>"><i class="material-icons">person_pin</i></span>
              <p class="medium-small <%= link_color(@company) %>">Ver perfil</p>
            <% end %>
          </li>

          <li class="center-align right">
            <%= link_to backstage_company_reviews_path(@company), class: link_color(@company) do %>
              <span class="card-title <%= detail_color(@company) %>"><i class="material-icons">star</i></span>
              <p class="medium-small <%= link_color(@company) %>">Avaliações</p>
            <% end %>
          </li>
          </ul>
        </div>
      </div>
    </div>
</div>
