<div class="col s12 l6 sidebar">
  <ul class="collection with-header">
    <li class="collection-header"><h5><i class="title-fa red-text fa fa-newspaper-o" aria-hidden="true"></i>AS ÃšLTIMAS</h5></li>
    <% @last_articles.each do |article| %>
      <li class="collection-item avatar">
        <%= link_to article.link(root_url) do %>
          <%= image_tag(article.cover.thumb, class: 'square') %>
        <% end %>
        <div class="title">
          <strong><%= link_to article.title, article.link(root_url), class: "article-title grey-text text-darken-4" %></strong>
