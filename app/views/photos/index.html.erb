<div class="row">
  <h5 class="main-title">√Ålbum: <%= @company.name %></h5>
</div>

<%= form_for @company, url: company_photos_path(@company), method: :post, html: { multipart: true }  do |f| %>

  <div class="row">
    <% @photos.each_with_index do |photo, index| %>
      <div class="col s6 m3 center-align" style="padding-bottom: 30px;">
        <div class="valign-wrapper center-align" style="height: 100px; overflow: hidden;">
          <div class="valign center-align" style="width: 100%;">
            <%= image_tag photo.url, width: "100px" %>
          </div>
        </div>
        <%= link_to "Remover", company_photo_path(@company, index), :method => :delete, data: { confirm: "Tem certeza?" } %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="input-field col s1">
      <%= f.label :photos %>
    </div>
    <div class="input-field col s11">
      <%= f.file_field :photos, multiple: true %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
        <i class="material-icons right">send</i>
      </button>

      <%= link_to "Visitar", "#{company_path(@company)}#tab-fotos", class: 'btn' %>
    </div>
  </div>
<% end %>
