<div class="row">
  <h5 class="main-title">√Ålbum: <%= @album.name %></h5>
</div>

<div class="row">
  <% @album.photos.each do |photo| %>
    <% if photo.persisted? %>
    <div class="col s6 m3 center-align" style="padding-bottom: 30px;">
      <div class="valign-wrapper center-align" style="height: 100px; overflow: hidden;">
        <div class="valign center-align" style="width: 100%;">
          <%= image_tag photo.photo.url, width: "100px" %>
          <br /><span><%= photo.description %></span>
        </div>
      </div>
      <%= link_to "Remover", company_album_photo_path(@company, @album, photo), :method => :delete, data: { confirm: "Tem certeza?" } %>
    </div>
    <% end %>
  <% end %>
</div>

<%= form_for @photo, url: company_album_photos_path(@company, @album, @photo), method: :post, html: { }  do |f| %>

  <div class="row">
    <h5 class="main-title">Nova foto</h5>
  </div>

  <div class="file-field input-field">
    <div class="btn">
      <span>Foto</span>
      <%= f.file_field :photo %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
      <%#= f.text_field :photo, "", class: "file-path validate" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
        <i class="material-icons right">send</i>
      </button>

      <%#= link_to "Visitar", "#{company_path(@company)}#tab-fotos", class: 'btn' %>
      <%= link_to "Visitar", get_url(@company), class: 'btn' %>
    </div>
  </div>
<% end %>
