<div id="<%= page.slug %>" class="full-padding <%= odd_color(@company, @row_counter) %>">
  <div class="row">
    <div class="container">
      <div class="section">
        <div class="title-wrapper center no-border">
          <h5><%= page.title %></h5>
          <h6><%= page.description %></h6>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="container">
      <div class="articles">
        <% @articles.each do |article| %>
          <div class="col s12">
            <div class="article card grey-text text-darken-4">
              <% if article.cover? %>
                <div class="card-image">
                  <%= image_tag article.cover, alt: article.title %>
                </div>
              <% end %>
              <div class="card-title">
                <h1><%= article.title %></h1>
                <em class="card-description"><i class="material-icons <%=  %>">schedule</i> Postado em <%= article.created_at.strftime("%d/%m/%Y") %></em>
              </div>
              <div class="card-content">
                <p class="article-description"><%= article.description %></p>
                <%= link_to "Ler mais", "/#{@company.slug}/#{@page.slug}/#{article.slug}", class: "btn-flat" %>
                <span class="right">
                  <div class="fb-like" data-href='<%= "#{root_url}/#{@company.slug}/#{@page.slug}/#{article.slug}" %>' data-layout="button_count" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="article-pager center white-text">
      <%= paginate @articles %>
    </div>
  </div>
</div>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.8&appId=1375113029226011";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
