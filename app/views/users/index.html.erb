<div class="row">
  <h5 class="main-title">Usuários</h5>
</div>

<div class="row">
  <table class="striped bordered">
    <thead>
      <tr>
          <th data-field="id"></th>
          <th data-field="name">Email</th>
          <th data-field="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>

      <tr>
        <td>#<%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Editar", [:edit, user] %>
        | <%= link_to "Remover", user, method: :delete, data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>

      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

  <div class="section">
    <%= link_to "Novo Usuário", new_user_path, class: "btn large" %>
  </div>
</div>
