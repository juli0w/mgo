<div class="section" style="margin-top: 2px; border-bottom: 1px solid #e2e2e2;">
  <h5 class="blue-grey-text text-darken-3"><%= @category.name %></h5>
</div>

<div class="section">
  <ul class="tabs" id="list-map-tab">
    <li class="tab col s3"><a href="#list">Lista</a></li>
    <li class="tab col s3"><a href="#mapa">Ver no mapa</a></li>
  </ul>
</div>

<div id="list" class="section col s12">

  <% unless @companies.blank? %>

    <ul class="collection">
      <%= render "companies/collection" %>
    </ul>

    <%= paginate @companies %>

  <% else %>

    <div class="section">
      Sem resultados, <%= link_to "volte para a pÃ¡gina inicial", "/" %>.
    </div>

  <% end %>

</div>
<div id="mapa" class="section col s12">
  <%= render "layouts/main/map" %>
</div>
<script>
    $(document).ready(function() {
      $.getScript('https://maps.googleapis.com/maps/api/js?key=AIzaSyCzq1h0fNZETR8Q0VAgVxqui85bPEhb-N0&callback=initMapByCat');
    });
    function initMapByCat() {
      initMap(<%= @category.id %>);
    }
</script>
