<div class="section">
  <ul class="tabs">
    <li class="tab col s3"><a href="#list">Lista</a></li>
    <li class="tab col s3"><a href="#mapa">Ver no mapa</a></li>
  </ul>
</div>

<div id="list" class="section col s12">

  <% unless @companies.blank? %>

    <ul class="collection with-header">
      <li class="collection-header">
        <h5>Categoria: <strong style='text-transform: uppercase;'><%= @category.name %></strong></h5>
      </li>
      <%= render "companies/collection" %>
    </ul>

    <%= paginate @companies %>

  <% else %>

    <div class="section">
      Sem resultados, <%= link_to "volte para a pÃ¡gina inicial", "/" %>.
    </div>

  <% end %>

</div>
<div id="mapa" class="section col s12">
  <%= render "layouts/main/map" %>
</div>
<script>
  function initMapByCat() {
    initMap(<%= @category.id %>);
  }
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzq1h0fNZETR8Q0VAgVxqui85bPEhb-N0&callback=initMapByCat">
</script>
