<div class="col s12 m6">
  <div class="card">
    <div class="card-content light-green darken-3 white-text">
      <p class="card-title" style="font-size: 1.4em;">
        Plano: <%= @subscribe.plan_value %>
      </p>
      <p class="card-title" style="font-size: 1.4em;">
        Status: <span class="state light-green darken-2 white-text"><%= @subscribe.state_value %></span>
      </p>
    </div>
    <% unless @subscribe.paid? %>
      <div class="card-action light-green lighten-1">
          <%= link_to "Efetuar pagamento", @subscribe.payment_link, class: "btn btn-large light-green darken-3" %>
      </div>
    <% end %>
  </div>
</div>
