    <div class="row">
      <div class="col s12 m12 l12">
        <h5 class="breadcrumbs-title">Pedido</h5>
        <ol class="breadcrumbs">
          <li>Novo pedido</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel">
      <%= form_for [:backstage, @subscribe]  do |f| %>

        <div class="row">
          <div class="input-field col s12">
            <%= f.collection_select(:company_id, @companies, :id, :name, include_blank: "Escolha a IDÃ‰IA", required: true) %>
            <%= f.label :company_id %>
