<div id="breadcrumbs-wrapper" class="row blue-grey darken-4 no-bot-margin white-text">
  <div class="col s12">
    <h4 class="breadcrumbs-title">Mensagens</h4>
    <ol class="breadcrumbs">
        <li>Administrativo</li>
    </ol>
  </div>
</div>

<nav class="sub-menu blue-grey darken-4">
  <div class="nav-wrapper">
    <div class="filter-widget left">
      <%= render "layouts/widgets/search", path: backstage_admin_contacts_path, placeholder: "Filtrar" %>
    </div>
  </div>
</nav>

<div class="row">
  <div class="col s12">
    <div class="card">
      <table class="striped bordered">
        <thead>
          <tr>
            <th data-field="company">Empresa</th>
            <th data-field="name">Remetente</th>
            <th data-field="price">Assunto</th>
            <th data-field="actions"></th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>

          <tr>
            <td><%= contact.company.try(:name) %></td>
            <td><%= contact.name %></td>
            <td><%= contact.subject %></td>
            <td>
              <%= link_to "Ver", backstage_admin_contact_path(contact) %><br>
              <%= link_to "Excluir", backstage_admin_contact_path(contact), method: :delete, data: { confirm: "Confirma exclusÃ£o permanente?" } %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

      <%= paginate @contacts %>
    </div>
  </div>
</div>
