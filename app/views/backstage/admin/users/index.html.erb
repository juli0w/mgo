<div id="breadcrumbs-wrapper" class="row blue-grey darken-4 no-bot-margin white-text">
  <div class="col s12">
    <h4 class="breadcrumbs-title">Usuários</h4>
    <ol class="breadcrumbs">
      <li>Administrativo</li>
    </ol>
  </div>
</div>

<nav class="sub-menu blue-grey darken-4">
  <div class="nav-wrapper">
    <div class="filter-widget left">
      <%= render "layouts/widgets/search", path: backstage_admin_users_path, placeholder: "Filtrar" %>
    </div>

    <ul class="right hide-on-med-and-down">
      <li><%= link_to new_backstage_admin_user_path do %>
        <i class="material-icons left">note_add</i> Cadastrar Usuário</li>
      <% end %></li>
    </ul>
  </div>
</nav>

<div class="row">
  <div class="col s12">
    <div class="card">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="id"></th>
              <th data-field="name">Email</th>
              <th data-field="actions"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>

          <tr>
            <td>#<%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Editar", [:edit, :backstage, :admin, user] %>
            | <%= link_to "Remover", [:backstage, :admin, user], method: :delete, data: { confirm: "Tem certeza?" } %>
            | <%= link_to "Login", [:become, :backstage, :admin, user], method: :post, data: { confirm: "Tem certeza?" } %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

      <%= paginate @users %>

    </div>
  </div>
</div>
