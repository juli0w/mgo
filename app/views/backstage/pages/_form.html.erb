<%= form_for [:backstage, @company, @page]  do |f| %>

  <div class="row">
    <div class="input-field col s8">
      <%= f.label :title %>
      <%= f.text_field :title, required: true %>
    </div>

    <div class="input-field col s4">
      <%= f.label :index %>
      <%= f.number_field :index, min: 0 %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :slug %>
      <%= f.text_field :slug, required: true %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
  </div>

  <% unless @page.persisted? %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :pageable_type %>
        <%= f.select :pageable_type, Page::PAGE_TYPES, required: true %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
        <i class="material-icons right">send</i>
      </button>
    </div>
  </div>
<% end %>
