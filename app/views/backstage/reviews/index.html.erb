<div class="section no-top-padding">
  <h5 class="main-title">Avaliações</h5>
</div>

<% @reviews.each do |review| %>
  <div class="rate row">
    <div class="col s12">
      Avaliação: <%= review.stars %>
    </div>

    <div class="col s12">
      <% unless review.comment.empty? %>
        <p>Comentário:<br /><%= review.comment %></p>
      <% end %>
    </div>

    <div class="col s12">
      <%= link_to "Deletar", [:backstage, @company, review], method: :delete, class: 'btn', data: { confirm: 'Tem certeza?' } %>
    </div>
  </div>
<% end %>

<%= paginate @reviews %>
