<%= render "layouts/backstage/profile_header" %>

<div class="row">
  <div class="col s6">
    <h5>Página de contato</h5>

    <%= form_for [:backstage, @company, @page, @contact_page]  do |f| %>

      <div class="row">
        <div class="input-field col s6 m12">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6 m12">
          <button class="btn waves-effect red waves-light" type="submit" name="action">Salvar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col s6">
    <h5>Dados da Página</h5>

    <%= render "backstage/pages/form" %>

  </div>
</div>
