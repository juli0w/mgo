<%= render "layouts/backstage/profile_header" %>
<nav class="sub-menu grey darken-3">
  <div class="nav-wrapper">
    <ul class="right hide-on-med-and-down">
      <li>
        <%= link_to url_for(filter: "unread"), class: "tooltipped #{'grey darken-2' if params[:filter] != 'read'}", 'data-tooltip': 'Não lidos' do %>
          <i class="material-icons orange-text left">tab_unselected</i> Não Lidos
        <% end %>
      </li>
      <li>
        <%= link_to url_for(filter: "read"), class: "tooltipped #{'grey darken-2' if params[:filter] == 'read'}", 'data-tooltip': 'Lidos' do %>
          <i class="material-icons orange-text left">tab</i> Lidos
        <% end %>
      </li>
    </ul>
  </div>
</nav>
<div class="row">
  <div class="col s12">
    <h5>Mensagens</h5>
    <div class="card">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="name">Remetente</th>
              <th data-field="price">Assunto</th>
              <th data-field="actions"></th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>

          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.subject %></td>
            <td>
              <%= link_to "Ver", backstage_company_contact_path(@company, contact) %><br>
              <%= link_to "Excluir", backstage_company_contact_path(@company, contact, filter: params[:filter]), method: :delete, data: { confirm: "Confirma exclusão permanente?" } %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

      <%= paginate @contacts %>
    </div>
  </div>
</div>
