<div id="breadcrumbs-wrapper">
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h5 class="breadcrumbs-title">Adicionar fotos</h5>
        <ol class="breadcrumbs">
          <li>Administrativo</li>
            <li><%= link_to "Empresas", backstage_companies_path %></li>
            <li><%= link_to @company.name, [:edit, :backstage, @company] %></li>
            <li><%= link_to "Álbuns", [:backstage, @company, :albums] %></li>
            <li><%= link_to @album.name, [:edit, :backstage, @company, @album] %></li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel">
    <h4 class="header2">Nova foto</h4>
    <%= form_for @photo, url: backstage_company_album_photos_path(@company, @album, @photo), method: :post do |f| %>


      <div class="row">
        <div class="file-field input-field">
          <div class="btn">
            <span>Foto</span>
            <%= f.file_field :photo %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :description %>
          <%= f.text_field :description, max: 220 %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect waves-light" type="submit" name="action">Salvar
            <i class="material-icons right">send</i>
          </button>

          <%#= link_to "Visitar", "#{company_path(@company)}#tab-fotos", class: 'btn' %>
          <%= link_to "Visitar", get_url(@company), class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @album.photos.each do |photo| %>
      <% if photo.persisted? %>
        <div class="col s6 m3 center-align" style="padding-bottom: 30px;">
          <div class="card-panel">
            <div class="valign-wrapper center-align" style="height: 100px; overflow: hidden;">
              <div class="valign center-align" style="width: 100%;">
                <%= image_tag photo.photo.url, width: "100px" %>
              </div>
            </div><br />
            <span><%= photo.description %></span><br />
            <%= link_to "Remover", backstage_company_album_photo_path(@company, @album, photo), :method => :delete, data: { confirm: "Tem certeza?" } %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
