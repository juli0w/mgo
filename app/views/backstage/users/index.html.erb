<div id="breadcrumbs-wrapper">
  <div class="container">
    <div class="row">
      <div class="col s12 m12 l12">
        <h5 class="breadcrumbs-title">Usuários</h5>
        <ol class="breadcrumbs">
            <li>Administrativo</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel">
      <div class="search-offers">
        <%= form_tag backstage_users_path, method: :get do %>
            <fieldset style="border: none; margin: 0; padding: 0;">
              <input name="keyword" id="icon_local" style="display: inline;" type="search" placeholder="Filtrar usuários" value=<%= params[:keyword] %>>
              <button class="btn" type="submit" name="action">
                Filtrar
              </button>
          </fieldset>
        <% end %>
      </div>
    </div>

    <div class="card-panel">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="id"></th>
              <th data-field="name">Email</th>
              <th data-field="actions"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>

          <tr>
            <td>#<%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to "Editar", [:edit, :backstage, user] %>
            | <%= link_to "Remover", [:backstage, user], method: :delete, data: { confirm: "Tem certeza?" } %>
            | <%= link_to "Login", [:become, :backstage, user], method: :post, data: { confirm: "Tem certeza?" } %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

      <%= paginate @users %>

    </div>

    <div class="card-panel">
      <%= link_to "Novo Usuário", new_backstage_user_path, class: "btn large" %>
    </div>
  </div>
</div>
