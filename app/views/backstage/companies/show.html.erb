<% content_for :subnav do %>
  <%= render "companies/subnav" %>
<% end %>

<div class="container">
  <div id="profile-page" class="row">

    <%= render "layouts/backstage/profile_header" %>

    <div class="col s12 m4">
      <div class="card <%= color(:primary_color, @company, true) %>">
        <div class="card-content white-text">
          <span class="card-title <%= color(:description_color, @company, true) %>">Descrição</span>
          <p><%= @company.description %></p>
        </div>
      </div>

      <ul id="profile-page-about-details" class="collection z-depth-1">
        <li class="collection-item <%= color(:primary_color, @company, true) %>">
          <div class="row">
            <div class="col s5 <%= color(:detail_color, @company, true) %>"><i class="tiny material-icons">message</i> Email</div>
            <div class="col s7 <%= color(:text_color, @company, true) %> truncate right-align"><%= @company.mail %></div>
          </div>
        </li>
        <li class="collection-item <%= color(:primary_color, @company, true) %>">
          <div class="row">
            <div class="col s5 <%= color(:detail_color, @company, true) %>"><i class="tiny material-icons">phone</i> Telefone</div>
            <div class="col s7 <%= color(:text_color, @company, true) %> right-align"><%= @company.phone %></div>
          </div>
        </li>
        <li class="collection-item <%= color(:primary_color, @company, true) %>">
          <div class="row">
            <div class="col s5 <%= color(:detail_color, @company, true) %>"><i class="tiny material-icons">perm_identity</i> Cadastro</div>
            <div class="col s7 <%= color(:text_color, @company, true) %> right-align"><%= l @company.created_at.to_date %></div>
          </div>
        </li>
      </ul>

      <div class="map-card">
          <div class="card <%= color(:primary_color, @company, true) %>">
              <div class="card-image waves-effect waves-block waves-light">
                <iframe
                  width="100%"
                  height="100%"
                  frameborder="0" style="border:0"
                  src="https://www.google.com/maps/embed/v1/search?key=AIzaSyDqdqRUKXGJjNk4vH42SPsWOQMae91Bosw&q=<%= @company.address_code %>&zoom=15" allowfullscreen>
                </iframe>
              </div>
              <div class="card-content">
                <span class="card-title <%= color(:text_color, @company, true) %>">
                  <%= @company.formatted_address %>
                </span>
              </div>
          </div>
        </div>
    </div>

    <div class="col s12 m8">
      <div class="card-panel">
        <div class="<%= color(:text_color, @company, true) %>"><%= raw @company.profile.institutional %></div>
      </div>
    </div>
  </div>
</div>
