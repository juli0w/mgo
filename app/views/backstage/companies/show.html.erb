<div class="container">
  <div id="profile-page" class="row">

    <%= render "layouts/backstage/profile_header" %>

    <div class="col s12 m4">
      <div class="card <%= primary_color(@company) %>">
        <div class="card-content white-text">
          <span class="card-title <%= detail_color(@company) %>">Descrição</span>
          <p><%= @company.description %></p>
        </div>
      </div>

      <ul id="profile-page-about-details" class="collection z-depth-1">
        <li class="collection-item <%= primary_color(@company) %>">
          <div class="row">
            <div class="col s5 <%= detail_color(@company) %>"><i class="tiny material-icons">message</i> Email</div>
            <div class="col s7 <%= text_color(@company) %> truncate right-align"><%= @company.profile.mail %></div>
          </div>
        </li>
        <li class="collection-item <%= primary_color(@company) %>">
          <div class="row">
            <div class="col s5 <%= detail_color(@company) %>"><i class="tiny material-icons">phone</i> Telefone</div>
            <div class="col s7 <%= text_color(@company) %> right-align"><%= @company.profile.phone %></div>
          </div>
        </li>
        <li class="collection-item <%= primary_color(@company) %>">
          <div class="row">
            <div class="col s5 <%= detail_color(@company) %>"><i class="mdi-social-cake"></i> Cadastro</div>
            <div class="col s7 <%= text_color(@company) %> right-align"><%= l @company.created_at.to_date %></div>
          </div>
        </li>
      </ul>

      <div class="map-card">
          <div class="card <%= primary_color(@company) %>">
              <div class="card-image waves-effect waves-block waves-light">
                <iframe
                  width="100%"
                  height="100%"
                  frameborder="0" style="border:0"
                  src="https://www.google.com/maps/embed/v1/search?key=AIzaSyDqdqRUKXGJjNk4vH42SPsWOQMae91Bosw&q=<%= @company.address_code %>&zoom=15" allowfullscreen>
                </iframe>
              </div>
              <div class="card-content">
                <span class="card-title <%= text_color(@company) %>">
                  <%= @company.profile.formatted_address %>
                </span>
              </div>
          </div>
        </div>
    </div>

    <div class="col s12 m8">
      <div class="card-panel <%= primary_color(@company) %>">
        <div class="<%= text_color(@company) %>"><%= @company.profile.institutional %></div>
      </div>
    </div>
  </div>
</div>
