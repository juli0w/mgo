<% content_for :subnav do %>
  <%= render "companies/subnav" %>
<% end %>

<div class="container">
  <div id="profile-page" class="row">

    <%= render "layouts/backstage/profile_header" %>

    <div class="col s12 l4">
      <div class="card">
        <div class="card-content">
          <div class="card-title">Descrição</div>
          <p><%= @company.shows :description %></p>
        </div>
      </div>
    </div>

    <div class="col s12 l4">
      <ul id="profile-page-about-details" class="collection z-depth-1">
        <li class="collection-item">
          <div class="row">
            <div class="col s5"><i class="tiny material-icons">message</i> Email</div>
            <div class="col s7 truncate right-align"><%= @company.shows :mail %></div>
          </div>
        </li>
        <li class="collection-item">
          <div class="row">
            <div class="col s5"><i class="tiny material-icons">phone</i> Telefone</div>
            <div class="col s7 right-align"><%= @company.shows :phone %></div>
          </div>
        </li>
        <li class="collection-item">
          <div class="row">
            <div class="col s5"><i class="tiny material-icons">perm_identity</i> Cadastro</div>
            <div class="col s7 right-align"><%= l @company.created_at.to_date %></div>
          </div>
        </li>
      </ul>
    </div>

    <div class="col s12 l4">
      <div class="map-card">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <iframe
                width="100%"
                height="100%"
                frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/search?key=AIzaSyDqdqRUKXGJjNk4vH42SPsWOQMae91Bosw&q=<%= @company.address_code %>&zoom=15" allowfullscreen>
              </iframe>
            </div>
            <div class="card-content">
              <span class="card-title">
                <%= @company.formatted_address %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
