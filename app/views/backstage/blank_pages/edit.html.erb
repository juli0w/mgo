<%= render "layouts/backstage/profile_header" %>

<div class="row">
  <div class="col s6">
    <%= form_for [:backstage, @company, @page, @blank_page]  do |f| %>
      <h5>Página em branco</h5>

      <div class="row">
        <div class="input-field col s12">
          Conteúdo<br><br>
          <%= f.cktext_area :content, ckeditor: { toolbar: 'Full', toolbarCanCollapse: true } %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect red waves-light" type="submit" name="action">Salvar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col s6">
    <h5>Dados da Página</h5>

    <%= render "backstage/pages/form" %>

  </div>
</div>
